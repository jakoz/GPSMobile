<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vautrin.gpslocationpresenter.MainActivity">

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblWelcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:text="to map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoToMap"
        android:onClick="onGoToMapClick"
        android:layout_below="@+id/lblWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:text="Get new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listLastCoordinates"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/button2" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="16dp"
        android:id="@+id/listLastCoordinates"
        android:scrollbars="none"
        android:layout_below="@+id/lblLastCoordinates"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Last coordinates for number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/lblLastCoordinates"
        android:layout_below="@+id/btnGoToMap"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/inputPhone"
        android:text="+48790286643"
        android:layout_width="130dp"
        android:layout_alignBaseline="@+id/lblLastCoordinates"
        android:layout_alignBottom="@+id/lblLastCoordinates"
        android:layout_toEndOf="@+id/lblLastCoordinates"
        android:layout_marginStart="11dp" />

</RelativeLayout>
