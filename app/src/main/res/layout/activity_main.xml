<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vautrin.gpslocationpresenter.MainActivity">

    <TextView
        android:text="Last coordinates for number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/lblLastCoordinates"
        android:layout_below="@+id/btnGoToMap"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/inputPhone"
        android:text="+48790286643"
        android:layout_width="130dp"
        android:layout_alignBaseline="@+id/lblLastCoordinates"
        android:layout_alignBottom="@+id/lblLastCoordinates"
        android:layout_toEndOf="@+id/lblLastCoordinates"
        android:layout_marginStart="11dp" />

    <Button
        android:text="to map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoToMap"
        android:onClick="onGoToMapClick"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Get new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGetNewClick"
        android:onClick="onGetNewClick"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnGoToMap"
        android:layout_marginBottom="16dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/listLastCoordinates"
        android:scrollbars="none"
        android:layout_alignBottom="@+id/btnGetNewClick"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />

    <TextView
        android:text="Amount of coordinates to present:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputPhone"
        android:layout_alignParentStart="true"
        android:id="@+id/lblAmountCoordinates" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="3"
        android:ems="10"
        android:id="@+id/inputAmountCoordinates"
        android:layout_below="@+id/lblLastCoordinates"
        android:layout_toEndOf="@+id/btnGoToMap"
        android:layout_marginStart="11dp" />

</RelativeLayout>
